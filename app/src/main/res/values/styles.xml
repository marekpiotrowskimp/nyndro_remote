<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowSharedElementsUseOverlay">false</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Drawer" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <style name="NyndroStyle" parent="Platform.V14.AppCompat.Light">
        <item name="android:background">@color/colorLightCoffee</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="NyndroStyle.CardView">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/colorLightCoffeeDarker</item>
    </style>

    <style name="NyndroStyle.Repeater">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@color/colorLightCoffeeDarker</item>
    </style>


    <style name="MyDialog" parent="Base.Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:colorBackground">@color/colorLightCoffeeDarker</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

</resources>
