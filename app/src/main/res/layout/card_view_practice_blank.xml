<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_practice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/colorLightCoffee"
    card_view:cardCornerRadius="8dp">
    <!--TODO Do new layout for Card practice-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

    <ImageView
        android:id="@+id/practice_image"
        android:layout_marginLeft="4dp"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Practice Image"
        android:src="@mipmap/icon_nyndro1" />
    </RelativeLayout>
</android.support.v7.widget.CardView>