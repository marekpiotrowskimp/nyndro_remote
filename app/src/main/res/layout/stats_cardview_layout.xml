<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/colorLightCoffee"
    card_view:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/statystics_practice_image_id"
            android:layout_marginBottom="8dp"
            android:layout_width="100dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:id="@+id/statistics_practice_name_layout"
            android:layout_alignTop="@id/statystics_practice_image_id"
            android:layout_toRightOf="@id/statystics_practice_image_id"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView
                android:text="@string/name_practice_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_dayofpractice_layout"
            android:layout_below="@id/statistics_practice_name_layout"
            android:layout_alignLeft="@id/statistics_practice_name_layout"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView
                android:text="@string/count_practice_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_average_week_layout"
            android:layout_below="@id/statistics_dayofpractice_layout"
            android:layout_alignLeft="@id/statistics_dayofpractice_layout"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView
                android:text="@string/average_weeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_average_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_average_month_layout"
            android:layout_below="@id/statistics_average_week_layout"
            android:layout_alignLeft="@id/statistics_average_week_layout"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView
                android:text="@string/average_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_average_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_average_days_layout"
            android:layout_below="@id/statistics_average_month_layout"
            android:layout_alignLeft="@id/statistics_average_month_layout"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView
                android:text="@string/average_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_average_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_expected_end_layout"
            android:layout_below="@id/statistics_average_days_layout"
            android:layout_alignLeft="@id/statistics_average_days_layout"
            android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
            <TextView
                android:text="@string/expected_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/statystics_practice_expected_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statistics_dayofweek_layout"
            android:layout_below="@id/statystics_practice_image_id"
            android:layout_alignLeft="@id/statystics_practice_image_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/statistics_barchart_description"
                android:text="@string/number_of_practices_in_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iso.piotrowski.marek.nyndro.UIComponents.BarChart
                android:id="@+id/statystics_bar_chart"
                xmlns:custom="http://schemas.android.com/apk/res/iso.piotrowski.marek.nyndro"
                custom:max_count = "100"
                custom:column_count = "7"
                custom:color_bar_chart = "@color/colorLightCoffeeDarker"
                custom:bar_size="24dp"
                custom:bar_margin = "4dp"
                custom:text_size="18dp"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/statistics_dayofweek_layout"
            android:layout_alignLeft="@id/statistics_dayofweek_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/statistics_barchart_month_description"
                android:text="@string/number_of_practices_in_months"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iso.piotrowski.marek.nyndro.UIComponents.BarChart
                android:id="@+id/statystics_bar_chart_month"
                xmlns:custom="http://schemas.android.com/apk/res/iso.piotrowski.marek.nyndro"
                custom:max_count = "100"
                custom:column_count = "12"
                custom:color_bar_chart = "@color/colorLightCoffeeDarker"
                custom:bar_size="24dp"
                custom:bar_margin = "4dp"
                custom:text_size="18dp"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>