<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plans_add_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/NyndroStyle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:theme="@style/NyndroStyle">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/remainder_practice_recicler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp" />

            <DatePicker
                android:id="@+id/plans_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:calendarViewShown="false"
                android:minDate="08/10/2016"
                android:spinnersShown="true" />

            <TimePicker
                android:id="@+id/plans_time_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:theme="@style/NyndroStyle.Repeater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_repeater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powtarzaj przypomnienie" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_daily"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Codziennie" />

                    <RadioButton
                        android:id="@+id/rb_weekly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co tydzień" />

                    <RadioButton
                        android:id="@+id/rb_monthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Co miesiąc" />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/plans_add_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorLightCoffeeDarker"
                android:text="@string/add_remainder_button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>