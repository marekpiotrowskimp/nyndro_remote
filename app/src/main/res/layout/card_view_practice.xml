<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_practice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/colorLightCoffee"
    card_view:cardCornerRadius="8dp">
    <!--TODO Do new layout for Card practice-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">
    <ImageView
        android:id="@+id/practice_image"
        android:layout_marginLeft="4dp"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:contentDescription="Practice Image"
        android:src="@drawable/buddha" />

    <TextView
        android:id="@+id/practice_name"
        android:text="Practice name"
        android:textSize="22dp"
        android:layout_toRightOf="@id/practice_image"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/practice_status"
        android:text="Practice name"
        android:layout_below="@id/practice_name"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/practice_progress"
        android:max="100"
        android:progress="50"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_below="@+id/practice_status"
        android:layout_alignLeft="@+id/practice_name"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/practice_description"
        android:text="Practice description"
        android:layout_below="@id/practice_progress"
        android:layout_alignLeft="@id/practice_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/practice_date_last"
        android:text="Practice date"
        android:layout_toRightOf="@id/practice_image"
        android:layout_alignBottom="@id/practice_image"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/practice_date_next"
        android:text="Practice date"
        android:layout_alignLeft="@id/practice_date_last"
        android:layout_above="@id/practice_date_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_alignBottom="@id/practice_date_last"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/practice_repetition"
            android:text="Practice repetition"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/practice_repetition_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightCoffee"
            android:src="@mipmap/ic_plus" />

    </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>