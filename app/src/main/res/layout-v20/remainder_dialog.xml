<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    android:background="@color/colorLightCoffee"
    android:orientation="vertical">

    <TimePicker
        android:id="@+id/remainder_time"
        android:layout_gravity="center_horizontal"
        android:numbersSelectorColor="@color/colorPrimaryDark"
        android:numbersInnerTextColor="@color/colorPrimaryDark"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <belka.us.androidtoggleswitch.widgets.ToggleSwitch
        android:id="@+id/toggle_switches"
        custom:activeBgColor="@color/colorPrimaryDark"
        custom:activeTextColor="@android:color/white"
        custom:inactiveBgColor="@color/colorLightCoffeeDarker"
        custom:inactiveTextColor="@android:color/black"
        custom:separatorColor="@color/gray"
        custom:paddingStart="0dp"
        custom:paddingEnd="0dp"
        android:layout_margin="2dp"
        android:textSize= "8sp"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/repeater_button"
        android:text="@string/done"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:textColor="@color/black"
        android:background="@color/colorLightCoffeeDarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>